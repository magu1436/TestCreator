{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python デバッガー: Django",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver", "0.0.0.0:8000"],
      "django": true,
      "autoStartBrowser": false
    },
    {
      "name": "Launch Chrome (Django)",
      "type": "chrome",
      "request": "launch",
      "url": "http://127.0.0.1:8000/",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Django + Chrome",
      "configurations": [
        "Python デバッガー: Django",
        "Launch Chrome (Django)"
      ]
    }
  ]
}
